version: '3.4'

services:
  database:
    image: "${REGISTRY_NAME}mongo:latest"
    networks:
      - "internal"
    restart: "unless-stopped"
  dashboard:
    build:
      context: .
      dockerfile: Dockerfile.dev
    volumes:
      - .:/code
      - /code/node_modules
    ports:
      - ${PORT}:${PORT}
    healthcheck:
      test: ["CMD", "curl", "http://localhost:${PORT}"]
      interval: 1m30s
      timeout: 10s
      retries: 3
      start_period: 40s
    restart: "unless-stopped" 
    networks:
      - "internal"
    env_file:
      - ./.env.dev
    depends_on:
      - database

volumes:
  clubdb:

networks:
  internal:
